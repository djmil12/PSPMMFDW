                    <div class="mb-3">
                      <label for="coachName" class="form-label">Coach</label>
                      <input type="text" class="form-control" id="coachName" value='{{user.username}}' readonly="true">
                    </div>
                    <div class="mb-3">
                      <label for="exitVeloTee" class="form-label">Velo Toss</label>
                      <input type="number" class="form-label" id="exitVeloTee" max="" min="">
                    </div>
                    <div class="mb-3">
                      <label for="exitVeloToss" class="form-label">Velo Tee</label>
                      <input type="number" class="form-label" id="exitVeloToss" max="" min="">
                    </div>
                    <div class="mb-3">
                      <label for="comments" class="form-label">Comments</label>
                      <input type="text" class="form-control" id="comments">
                    </div>
                    <div class="mb-3">
                      <label for="date" class="form-label">Date</label>
                      <input type="text" class="form-control" id="date" readonly="true" value="{{currentDate}}">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>

          {{!-- Strength evaluation button and modal --}}
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#strengthModal">
            Create Strength Evaluation
          </button>
          <!-- Modal -->
          <div class="modal fade" id="strengthModal" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
