<div>
  <div>
    <div className="container container-fluid">
      <div className="row">
        <div className="col-1 col-md-4 "></div>
        <div className="col-10 col-md-4 card  text-center">
          <h1 class="user-select-none fs-1">This is the Pipeline Sports Performance Member Management and Facility Data
            Warehouse</h1>
          <p class="user-select-all">NEED A WALKTHROUGH FOR HOW TO USE APP</p>

          {{!-- Form should only displayed when coach is logged in --}}
          {{!-- Pitching eval form inside of modal behind button --}}
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#pitchingModal">
            Create Pitching Evaluation
          </button>
          <!-- Modal -->
          <div class="modal fade" id="pitchingModal" tabindex="-1" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Pitching Evaluation</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="mb-3">
                      <label for="coachName" class="form-label">Coach</label>
                      <input type="text" class="form-control" id="coachName" value='{{user.username}}' readonly="true">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Password</label>
                      <input type="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3 form-check">
                      <input type="checkbox" class="form-check-input" id="exampleCheck1">
                      <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>

